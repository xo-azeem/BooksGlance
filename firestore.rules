rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Books collection - allow public reads, writes for admin
    match /books/{bookId} {
      // Allow anyone to read books (for the bookstore frontend)
      allow read: if true;
      
      // Allow writes to books collection (for admin portal)
      // In production, you should add authentication check here
      // For now, allowing all writes - UPDATE THIS FOR PRODUCTION!
      allow write: if true;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

